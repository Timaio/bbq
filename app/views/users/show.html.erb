<p style="color: green"><%= notice %></p>

<%= render @user %>

<% if @user == current_user %>
  <div>
    <%= link_to "Edit profile", edit_user_path(@user) %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h2>Organized events:</h2>
      <div class="row">
        <%= render partial: "events/event", collection: @user.events  %>
      </div>
    <% else %>
      <p>Has not organized any events yet.</p>
    <% end %>
  </div>
</div>
