<div class="col-lg-4 col-md-6 mx-auto">
  <h1 class="text-center"><%= t("events.event.pincode") %></h1>

  <%= form_with data: {turbo: false} do |form| %>
    <div class="form-group">
      <%= form.text_field :pincode, class: "form-control" %>
    </div>

    <div class="actions mt-3 mb-3">
      <%= form.submit t("events.event.pincode_show"), class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>
