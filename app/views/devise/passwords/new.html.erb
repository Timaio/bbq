<div class="col-lg-4 col-md-6 mx-auto">
  <h2 class="text-center"><%= t("users.user.forgot_password") %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render partial: "partials/form_errors", resource: resource %>

    <div class="field form-group mt-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions mt-3 mb-3">
      <%= f.submit t("users.user.send_me_reset_password_insctructions"), class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
